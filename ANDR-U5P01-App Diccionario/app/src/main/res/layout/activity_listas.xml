<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ListasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#172780"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista"
            android:textAlignment="center"
            android:textColor="#FFFEFE"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <SearchView
        android:id="@+id/buscarLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="svwListaClick" />

    <ListView
        android:id="@+id/ListaDic"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:choiceMode="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#172780"
            android:onClick="btnNuevoClick"
            android:text="Crear"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#172780"
            android:onClick="btnModificarClick"
            android:text="Modificar"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#172780"
            android:onClick="btnEliminarClick"
            android:text="Eliminar"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>